<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd ">

    <changeSet id="init-schema" author="mikeyjay">
        <createTable tableName="item">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="PK_item"/>
            </column>
            <column name="description" type="varchar(255)"/>
        </createTable>
        <createTable tableName="app_user">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="PK_app_user"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="auction_item">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="PK_auction_item"/>
            </column>
            <column autoIncrement="true" name="item" type="bigint">
                <constraints foreignKeyName="fk_item" references="item(id)" nullable="false"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="current_bid" type="bigint"/>
            <column name="max_auto_bid_amount" type="bigint"/>
            <column name="reserve_price" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="init-data" author="mikeyjay">
        <sqlFile path="data.sql"/>
    </changeSet>
</databaseChangeLog>